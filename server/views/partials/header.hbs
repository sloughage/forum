<header class='header'>
    <a href='/' class='header_button_a'><div class='header_button'>forum</div></a>
    <div class='fill'></div>
    <div>
        <div id='login_button' class='header_button'>
            {{#if isLoggedIn}}
            {{username}}
            {{else}}
            login
            {{/if}}
        </div>
        <div class='login_dropdown hidden'>
            {{#if isLoggedIn}}
            <a href='/user/logout' class='header_button_a'><div class='header_button'>logout</div></a>
            {{else}}
            <form action='/user/login' method='post'>
                <div class='login_dropdown_1'>
                    <input type='text' name='username' class='textbox_s' placeholder='username' maxlength='16'>
                    <div class='space_v'></div>
                    <input type='password' name='password' class='textbox_s' placeholder='password' maxlength='16'>
                    <div class='space_v'></div>
                    <div class='login_dropdown_2'>
                        <button>login</button>
                        <div class='fill'></div>
                        <a href='/user/register'>register</a>
                    </div>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</header>
<script src="/js/header.js" type="text/javascript"></script>